<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.callum.first.util.Correct"
    android:background="@color/Green">

    <TextView android:text="@string/Correct" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:capitalize="words"
        android:textColor="@color/White"
        android:gravity="center"
        android:layout_alignParentEnd="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true"
        android:id="@+id/Correct_Text"
        android:textSize="65dp"
        android:fontFamily="impack"
        android:enabled="false" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/Back_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:enabled="true"
        android:clickable="true"
        style="@android:style/Widget.Material.Light.ButtonBar"
        android:layout_alignParentEnd="false"
        android:background="#2a000000" />

</RelativeLayout>
